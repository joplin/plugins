{
	"manifest_version": 1,
	"id": "com.bwat47.simple-image-resize",
	"app_min_version": "3.3",
	"version": "1.5.1",
	"platforms": [
		"desktop",
		"mobile"
	],
	"name": "Simple Image Resize",
	"description": "A simple dialogue to switch image syntax between markdown/html and losslessly resize images",
	"author": "bwat47",
	"homepage_url": "https://github.com/bwat47/simple-image-resize",
	"repository_url": "https://github.com/bwat47/simple-image-resize",
	"keywords": [
		"Image",
		"Images",
		"Resize",
		"Markdown",
		"HTML"
	],
	"categories": [
		"productivity"
	],
	"screenshots": [
		{
			"src": "images/simple-resize1.png",
			"label": "simple resize example 1"
		},
		{
			"src": "images/simple-resize2.png",
			"label": "simple resize example 2"
		},
		{
			"src": "images/simple-resize3.png",
			"label": "simple resize example 3"
		},
		{
			"src": "images/simple-resize4.png",
			"label": "simple resize example 4"
		}
	],
	"icons": {
		"16": "images/16.png",
		"32": "images/32.png",
		"48": "images/48.png",
		"64": "images/64.png",
		"128": "images/128.png"
	},
	"promo_tile": {
		"src": "images/simple-image-resize_promo_tile.png",
		"label": "Simple Resize Promo Tile"
	},
	"settings": {
		"defaultResizeMode": {
			"type": "enum",
			"label": "Default resize mode",
			"description": "The resize mode that will be selected by default when opening the resize dialog",
			"options": {
				"percentage": "Percentage",
				"absolute": "Absolute size"
			},
			"value": "percentage"
		},
		"htmlSyntaxStyle": {
			"type": "enum",
			"label": "HTML syntax style",
			"description": "Controls whether HTML image tags include both width and height attributes or just width",
			"options": {
				"widthAndHeight": "Width and height",
				"widthOnly": "Width only"
			},
			"value": "widthAndHeight"
		},
		"showQuickResizeInContextMenu": {
			"type": "bool",
			"label": "Display quick resize options in context menu",
			"description": "Show quick resize options (25%, 50%, 75%, 100%) in the right-click context menu",
			"value": false
		}
	},
	"_publish_hash": "sha256:e91a598548e867be5758c8fbdb19f29a8b262314c8256d0033e2afaf6eb81373",
	"_publish_commit": "main:7d3b174e62664258264ee69d682095be4d97ee06",
	"_npm_package_name": "joplin-plugin-simple-image-resize"
}